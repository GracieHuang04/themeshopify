<main>
    
    <div class="container">
        <div class="camera-scroll">
            <img
                width = "250"
                height = "250"
                loading = "lazy"
                class = "sticky-image"
                {% if settings.product1 != blank %}
                    src = " {{ settings.product1 | image_url }}"
                {% else %}
                    src = "{{ 'c1.png'| asset_url }}"
                {% endif %}
            >
        </div>
        <div class="scroll-reveal">
          <img src="{{ 'photo1.jpg' | asset_url }}" class="left-image" width="500" height="300">
          <img src="{{ 'photo2.jpg' | asset_url}}" class="right-image" width="500" height="300">
        </div>
      
        <div class="scroll-reveal">
          <img src="{{ 'photo3.jpg' | asset_url }}" class="left-image" width="500" height="300">
          <img src="{{ 'photo4.jpg' | asset_url }}" class="right-image" width="500" height="300">
        </div>

        <div class="scroll-reveal">
            <img src="{{ 'photo5.jpg' | asset_url }}" class="left-image" width="500" height="300">
            <img src="{{ 'photo6.jpg' | asset_url }}" class="right-image" width="500" height="300">
        </div>

        <div class="scroll-reveal">
            <img src="{{ 'photo7.jpg' | asset_url }}" class="left-image" width="500" height="300">
            <img src="{{ 'photo8.jpg' | asset_url }}" class="right-image" width="500" height="300">
        </div>
      </div>
      
</main>

<style>
    .container {
        position: relative;
        width: 100%;
      }
      
      .sticky-image {
        position: -webkit-sticky; /* for Safari */
        position: sticky;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        text-align: center;
      }
      
      .scroll-reveal {
        position: relative;
        width: 100%;
        height: 100vh; /* Adjust height to control the scroll effect */
        overflow: hidden;
      }
      
      .left-image, .right-image {
        position: absolute;
        top: 50%;
        transition: transform 1s ease;
        transform: translateY(-50%);
      }
      
      .left-image {
        left: -500px; /* Start off-screen */
      }
      
      .right-image {
        right: -500px; /* Start off-screen */
      }
      
</style>
<script>
    // Wait for the DOM to load before running the script
document.addEventListener('DOMContentLoaded', function() {

    // Select all elements with the class 'scroll-reveal'
    const reveals = document.querySelectorAll('.scroll-reveal');
  
    // Add a scroll event listener to the window
    window.addEventListener('scroll', function() {
      
      // Get the current scroll position
      const scrollPosition = window.scrollY + window.innerHeight;
      
      // Loop through each 'scroll-reveal' section
      reveals.forEach((reveal) => {
        
        // Get the top position of the reveal section
        const revealTop = reveal.offsetTop;
        
        // If the scroll position has reached the reveal section
        if (scrollPosition >= revealTop) {
          
          // Animate the left image by sliding it in from the left
          reveal.querySelector('.left-image').style.transform = 'translateX(500px)';
          
          // Animate the right image by sliding it in from the right
          reveal.querySelector('.right-image').style.transform = 'translateX(-500px)';
        }
      });
    });
  
  });
</script>
