<section>
    <div class="container">
        <div class="images">
            <a href="{{pages['ilme-fx30'].url }}">
                <img
                    width = "300"
                    height = "300"
                    {% if section.settings.camera1 != blank %}
                        src="{{ 'section.settings.cemera1'| image_url }}"
                    {% else %}
                        src ="{{ 'c1.png' | asset_url}}"
                    {% endif %}
                >
            </a>
            <a href="{{pages['ilce-6400'].url }}">
                <img
                    width = "300"
                    height = "300"
                    {% if section.settings.camera2 != blank %}
                        src="{{ 'section.settings.cemera2'| image_url }}"
                    {% else %}
                        src ="{{ 'c2.png' | asset_url}}"
                    {% endif %}
                >
            </a>
        </div>
    </div>
  
</section>

<style>
    .container{
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .images {
        display:flex;
        justify-content: space-evenly;
        
    }
</style>
{% schema %} {
    "name": "product-display",
    "settings": [
        {
            "type": "image_picker",
            "id": "camera1",
            "label" : "Upload product image"
        },
        {
            "type": "image_picker",
            "id": "camera2",
            "label" : "Upload product image"
        }
    ]
}

{% endschema %}