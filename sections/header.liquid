<header>
    <div class="nav-bar">
        <div class="nav-left-section">
            {% if settings.logo-image != blank %} 
            <a href="{{ shop.url }}">
                <img 
                    width = "100"
                    height = "100"
                    loading = "lazy"
                    src = "{{ settings.logo-image | image_url}}"
                >
            </a>
            {% else %}
            <a href="{{ shop.url }}">
                <img
                    width = "100"
                    height = "100"
                    loading = "lazy"
                    src="{{'logo-1.png' | asset_url}}"
                >
            </a>
        {% endif %}
        </div>
        
        <div class = "nav-middle-section">
            <ul>
                {% for link in linklists.main-menu.links %}
                    <li>
                        <a href="{{ link.url }}" title="{{ link.title }}">
                            {{ link.title }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <div class="nav-right-section">
            <div class="inner-right">
                <a href="{{ pages['our-history'].url }}">Our History</a>
            </div>
            <div class="inner-right">
                <form action="/search" class="search-box">
                    <input type="search" name="q" placeholder="Search products..."/>
                    <button type="submit">Search</button>
                </form>
            </div>
            <div class=inner-right>
                <a href="/cart">
                    <img
                    width = "50"
                    height = "50"
                    {% if settings.cart-image != blank %}
                        src = "{{ settings.cart-image | image_url }}"
                    {% else  %}
                        src = "{{ 'cartlogo.png' | asset_url }}"
                    {% endif %}
                    >
                </a>
            </div>
        </div>
    </div>
</header>
<style>
header a{
    color : #000000;
    text-decoration: none;
}
header a:hover{
    text-decoration: underline;
}
.nav-bar{
    display:flex;
    justify-content: space-between;
}
.nav-left-section{
    display: flex;

}

.nav-middle-section li{
    list-style:none;
    padding: 15px;
}

.nav-middle-section ul{
    display: flex;
    color: inherit;
    padding: 20px;
    align-items: center;
}
.nav-right-section{
    display: flex;
    padding: 20px;
    align-items: center;
}
.inner-right{
    padding: 15px;
    color: inherit;
}
.search-box{
}
</style>
{%schema%}{
    "name": "Header",
    "settings": [ {
        "type": "image_picker",
        "id": "logo-image",
        "label": "Upload logo"
    },
    {
        "type": "color",
        "id": "header-background-color",
        "label": "Header Background Color",
        "default": "#ffffff"
    },
    {
        "type": "color",
        "id": "text-color",
        "label": "Text Color",
        "default": "#000000"
    },
    {
        "type": "image_picker",
        "id": "cart-image",
        "label": "Upload cart logo of your choice"
    }
    ]
}

{% endschema %}